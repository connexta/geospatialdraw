{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "lib": ["es6", "dom", "es2017", "es2018"],
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "outDir": "target/webapp"
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "./target/storybook/docs",
    "categorizeByGroup": true
  },
  "include": ["src/main/webapp/**/*.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
